{
    "name": "google-apps-script-projects",
    "version": "1.0.0",
    "description": "Google Apps Script projects",
    "repository": {
        "type": "git",
        "url": "https://github.com/jbpkp07/google-apps-script-projects"
    },
    "license": "UNLICENSED",
    "author": "Jeremy Barnes",
    "scripts": {
        "prebuild": "npm run clean:dist -s && npm run check:repo -s",
        "build": "npm run build:all-projects -s || npm run rollback:dist -s",
        "postbuild": "npm run prettify:dist -s || npm run rollback:dist -s",
        "build:all-projects": "npm run build:project-template -s && npm run build:etf-studio -s",
        "build:etf-studio": "tsc -p ./src/etf-studio/tsconfig.json",
        "build:project-template": "tsc -p ./src/project-template/tsconfig.json",
        "check:eslint": "eslint ./src --max-warnings=0",
        "check:package-json": "sort-package-json --check --quiet || sort-package-json --check",
        "check:repo": "npm run check:eslint -s && npm run check:package-json -s",
        "clean:cache": "rm -rf ./.cache",
        "clean:dist": "rm -rf ./dist",
        "prettify:dist": "eslint --fix ./dist --max-warnings=0",
        "rollback:dist": "npm run clean:dist -s && exit 1",
        "start:dev": "npm run clean:cache -s && ts-node-dev --cache-directory .cache --respawn --rs --cls --project",
        "start:etf-studio": "npm run start:dev -s ./src/etf-studio/tsconfig.json --",
        "start:project-template": "npm run start:dev -s ./src/project-template/tsconfig.json --"
    },
    "devDependencies": {
        "@types/google-apps-script": "^1.0.99",
        "@types/node": "^20.19.4",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.12.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^16.1.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-googleappsscript": "^1.0.5",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-only-warn": "^1.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-sonarjs": "^0.12.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.1",
        "sort-package-json": "^3.4.0",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.5"
    }
}
