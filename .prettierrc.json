{
    "$schema": "https://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false,
    "overrides": [
        {
            "files": ["./src/**/consts.ts"],
            "options": {
                "printWidth": 130
            }
        },
        {
            "files": ["./dist/**/index.js"],
            "options": {
                "printWidth": 130,
                "tabWidth": 2
            }
        }
    ]
}
